<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:id="@+id/linearLayout2"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:id="@+id/run"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="680dp"
            android:layout_marginBottom="8dp"
            android:text="flee"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

    <Button
            android:id="@+id/item"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:text="item"
            app:layout_constraintBottom_toTopOf="@+id/run"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/tech"
            android:layout_width="429dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="tech"
            app:layout_constraintBottom_toTopOf="@+id/item"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:id="@+id/attack"
            android:layout_width="409dp"
            android:layout_height="44dp"
            android:layout_marginBottom="8dp"
            android:text="attack"
            app:layout_constraintBottom_toTopOf="@+id/tech"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/health"
            android:layout_width="175dp"
            android:layout_height="93dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/eHealth"
            android:layout_width="249dp"
            android:layout_height="91dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/health"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"/>

    <TextView
            android:id="@+id/inventoryList"
            android:layout_width="386dp"
            android:layout_height="266dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="60dp"
            android:scrollbars="vertical"
            android:text="TextView"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/attack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/useItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:text="Button"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/attack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"/>

    <EditText
            android:id="@+id/itemID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:hint="id"
            android:inputType="textPersonName"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/attack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>
