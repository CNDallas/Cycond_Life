<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Cycond Life"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="48sp"
        app:fontFamily="@font/carter_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stats"
        android:layout_width="108dp"
        android:layout_height="56dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/holo_blue_light"
        android:text="Stats"
        android:textColor="@color/place_autocomplete_search_text"
        android:textIsSelectable="false"
        app:fontFamily="@font/carter_one"
        app:layout_constraintBottom_toTopOf="@+id/inventory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/inventory"
        android:layout_width="108dp"
        android:layout_height="56dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/holo_blue_light"
        android:text="Inventory"
        android:textColor="@color/place_autocomplete_search_text"
        app:fontFamily="@font/carter_one"
        app:layout_constraintBottom_toTopOf="@+id/shop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/shop"
        android:layout_width="108dp"
        android:layout_height="56dp"
        android:background="@android:color/holo_blue_light"
        android:text="Shop"
        android:textColor="@color/place_autocomplete_search_text"
        app:fontFamily="@font/carter_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/friends"
        android:layout_width="108dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_blue_light"
        android:text="Friends"
        android:textColor="@color/place_autocomplete_search_text"
        app:fontFamily="@font/carter_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop" />

    <Button
        android:id="@+id/dev_menu"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="108dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="Dev Menu"
        android:textColor="@android:color/holo_blue_dark"
        app:fontFamily="@font/carter_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map" />

    <Button
        android:id="@+id/map"
        android:layout_width="108dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_blue_light"
        android:text="Map"
        android:textColor="@color/place_autocomplete_search_text"
        app:fontFamily="@font/carter_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/friends" />
</android.support.constraint.ConstraintLayout>